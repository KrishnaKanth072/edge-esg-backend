# Database Configuration
# SECURITY: Generate strong random password, never use default
DATABASE_URL=postgres://edge_admin:CHANGE_ME_STRONG_PASSWORD@localhost:5432/edge_esg

# Redis Configuration
# SECURITY: Generate strong random password, never use default
REDIS_URL=redis://:CHANGE_ME_STRONG_PASSWORD@localhost:6379/0

# Keycloak SSO Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=edgeesg

# Server Configuration
SERVER_PORT=8000
ENVIRONMENT=development

# Encryption Key (32 bytes = 64 hex characters)
# SECURITY: Generate using: openssl rand -hex 32
# NEVER commit real keys to Git
ENCRYPTION_KEY=GENERATE_WITH_OPENSSL_RAND_HEX_32

# Bank-Specific Encryption Keys
# Format: BANK_KEY_<BANK_ID>=<64-hex-characters>
# Generate each key: openssl rand -hex 32
BANK_KEY_hdfc-bank=GENERATE_UNIQUE_KEY_FOR_HDFC
BANK_KEY_icici-bank=GENERATE_UNIQUE_KEY_FOR_ICICI
BANK_KEY_sbi-bank=GENERATE_UNIQUE_KEY_FOR_SBI

# TLS/HTTPS Configuration (Required in production)
TLS_ENABLED=false
TLS_CERT_FILE=/path/to/cert.pem
TLS_KEY_FILE=/path/to/key.pem

# Production Settings
# ENVIRONMENT=production
# TLS_ENABLED=true

